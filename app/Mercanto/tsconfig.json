{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "module.exports": {
    "resolver": {
      "assetExts": [
        "png"
      ],
      "sourceExts": [
        "ts",
        "tsx"
      ],
      "platforms": [
        "ios",
        "android",
        "web"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "./app/**/*"
  ]
}